<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contador - Ca√≠da</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 20px;
        }

        .container {
            max-width: 800px;
            margin: 0 auto;
        }

        .header {
            background: white;
            padding: 20px;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.3);
            margin-bottom: 20px;
            text-align: center;
        }

        h1 {
            color: #667eea;
            font-size: 2.5em;
            margin-bottom: 10px;
        }

        .subtitle {
            color: #666;
            font-size: 0.9em;
        }

        .players-section {
            display: grid;
            gap: 15px;
        }

        .player-card {
            background: white;
            border-radius: 15px;
            padding: 20px;
            box-shadow: 0 5px 20px rgba(0,0,0,0.2);
            position: relative;
        }

        .player-card.winner {
            background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
            animation: pulse 1s infinite;
        }

        .player-card.winner * {
            color: white !important;
        }

        @keyframes pulse {
            0%, 100% { transform: scale(1); }
            50% { transform: scale(1.02); }
        }

        .player-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 15px;
        }

        .player-name {
            font-size: 1.3em;
            padding: 8px 15px;
            border: 2px solid #667eea;
            border-radius: 8px;
            flex-grow: 1;
            margin-right: 10px;
        }

        .player-card.winner .player-name {
            border-color: white;
            background: rgba(255,255,255,0.2);
        }

        .delete-btn {
            background: #ff4757;
            color: white;
            border: none;
            padding: 10px 15px;
            border-radius: 8px;
            cursor: pointer;
            font-size: 0.9em;
        }

        .delete-btn:hover {
            background: #ff3838;
        }

        .score-display {
            text-align: center;
            font-size: 3.5em;
            font-weight: bold;
            color: #667eea;
            margin: 20px 0;
        }

        .score-limit {
            text-align: center;
            font-size: 0.9em;
            color: #999;
            margin-top: -10px;
            margin-bottom: 15px;
        }

        .section-title {
            font-weight: bold;
            color: #667eea;
            margin-top: 15px;
            margin-bottom: 8px;
            font-size: 1.1em;
        }

        .caidas-grid {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 8px;
        }

        .rondas-grid {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 8px;
        }

        .cantos-grid {
            display: grid;
            gap: 8px;
        }

        .action-btn {
            padding: 12px;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            font-weight: bold;
            font-size: 0.95em;
            transition: all 0.3s;
        }

        .caida-btn {
            background: linear-gradient(135deg, #48c6ef 0%, #6f86d6 100%);
            color: white;
        }

        .caida-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(72, 198, 239, 0.4);
        }

        .ronda-btn {
            background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
            color: white;
        }

        .ronda-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(240, 147, 251, 0.4);
        }

        .patrulla-btn {
            background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
            color: white;
            padding: 15px;
            font-size: 1.1em;
        }

        .patrulla-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(79, 172, 254, 0.4);
        }

        .vigia-btn {
            background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);
            color: white;
            padding: 15px;
            font-size: 1.1em;
        }

        .vigia-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(67, 233, 123, 0.4);
        }

        .registro-btn {
            background: linear-gradient(135deg, #fa709a 0%, #fee140 100%);
            color: white;
            padding: 15px;
            font-size: 1.1em;
        }

        .registro-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(250, 112, 154, 0.4);
        }

        .control-buttons {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 10px;
            margin-top: 15px;
        }

        .reset-btn {
            background: #ff6348;
            color: white;
            padding: 12px;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            font-weight: bold;
        }

        .reset-btn:hover {
            background: #ff4757;
        }

        .add-player-section {
            background: white;
            padding: 20px;
            border-radius: 15px;
            box-shadow: 0 5px 20px rgba(0,0,0,0.2);
            margin-top: 15px;
            display: flex;
            gap: 10px;
        }

        .add-player-input {
            flex-grow: 1;
            padding: 12px;
            border: 2px solid #667eea;
            border-radius: 8px;
            font-size: 1em;
        }

        .add-player-btn {
            background: #667eea;
            color: white;
            border: none;
            padding: 12px 25px;
            border-radius: 8px;
            cursor: pointer;
            font-weight: bold;
        }

        .add-player-btn:hover {
            background: #5568d3;
        }

        .rules-btn {
            background: #feca57;
            color: #333;
            border: none;
            padding: 10px 20px;
            border-radius: 8px;
            cursor: pointer;
            font-weight: bold;
            margin-top: 10px;
        }

        .rules-btn:hover {
            background: #fddb3a;
        }

        .modal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0,0,0,0.7);
            z-index: 1000;
            padding: 20px;
            overflow-y: auto;
        }

        .modal-content {
            background: white;
            max-width: 600px;
            margin: 50px auto;
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 10px 40px rgba(0,0,0,0.3);
        }

        .modal-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

        .close-modal {
            background: #ff4757;
            color: white;
            border: none;
            padding: 8px 15px;
            border-radius: 8px;
            cursor: pointer;
            font-weight: bold;
        }

        .rules-content h3 {
            color: #667eea;
            margin-top: 20px;
            margin-bottom: 10px;
        }

        .rules-content ul {
            margin-left: 20px;
            line-height: 1.8;
        }

        .rules-content h4 {
            color: #764ba2;
            margin-top: 15px;
            margin-bottom: 8px;
        }

        .winner-badge {
            position: absolute;
            top: 10px;
            right: 10px;
            background: gold;
            color: #333;
            padding: 5px 15px;
            border-radius: 20px;
            font-weight: bold;
            font-size: 1.2em;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>üÉè Ca√≠da</h1>
            <p class="subtitle">Primer jugador en llegar a 24 puntos gana</p>
            <button class="rules-btn" onclick="showRules()">üìñ Ver Reglas</button>
        </div>

        <div id="players" class="players-section"></div>

        <div class="add-player-section">
            <input type="text" id="newPlayerName" class="add-player-input" placeholder="Nombre del jugador" onkeypress="if(event.key==='Enter') addPlayer()">
            <button class="add-player-btn" onclick="addPlayer()">‚ûï Agregar Jugador</button>
        </div>

        <div class="add-player-section" style="margin-top: 15px;">
            <button class="reset-btn" style="width: 100%;" onclick="resetAll()">üîÑ Reiniciar Todo</button>
        </div>
    </div>

    <div id="rulesModal" class="modal" onclick="if(event.target===this) hideRules()">
        <div class="modal-content">
            <div class="modal-header">
                <h2 style="color: #667eea;">üìñ Reglas del Juego "Ca√≠da"</h2>
                <button class="close-modal" onclick="hideRules()">‚úï</button>
            </div>
            <div class="rules-content">
                <h3>üéØ Ca√≠das</h3>
                <p>Cuando un jugador lanza una carta y el siguiente tiene la misma carta:</p>
                <ul>
                    <li><strong>Ca√≠das del 1 al 7:</strong> 1 punto cada una</li>
                    <li><strong>Ca√≠da de 10:</strong> 2 puntos</li>
                    <li><strong>Ca√≠da de 11:</strong> 3 puntos</li>
                    <li><strong>Ca√≠da de 12:</strong> 4 puntos</li>
                </ul>

                <h3>üé¥ Cantos Especiales</h3>
                
                <h4>üî∑ Ronda (2 cartas iguales + 1 diferente)</h4>
                <p>Ejemplo: 1-1-3, 5-5-10</p>
                <ul>
                    <li><strong>Rondas del 1 al 7:</strong> 1 punto</li>
                    <li><strong>Ronda de 10:</strong> 2 puntos</li>
                    <li><strong>Ronda de 11:</strong> 3 puntos</li>
                    <li><strong>Ronda de 12:</strong> 4 puntos</li>
                </ul>

                <h4>üî∑ Patrulla (3 cartas consecutivas)</h4>
                <p>Ejemplo: 1-2-3, 4-5-6, 10-11-12</p>
                <ul>
                    <li><strong>Siempre vale:</strong> 6 puntos</li>
                </ul>

                <h4>üî∑ Vig√≠a (2 iguales + 1 consecutiva)</h4>
                <p>Ejemplo: 2-2-3, 4-4-5, 5-5-4</p>
                <ul>
                    <li><strong>Siempre vale:</strong> 7 puntos</li>
                </ul>

                <h4>üî∑ Registro (12-1-11)</h4>
                <p>Combinaci√≥n espec√≠fica: 12, 1 y 11</p>
                <ul>
                    <li><strong>Siempre vale:</strong> 8 puntos</li>
                </ul>

                <h3>üèÜ Victoria</h3>
                <p>El primer jugador que llegue a <strong>24 puntos</strong> gana el juego.</p>
            </div>
        </div>
    </div>

    <script>
        let players = [
            { id: 1, name: 'Jugador 1', score: 0 },
            { id: 2, name: 'Jugador 2', score: 0 }
        ];
        let gameEnded = false;

        function renderPlayers() {
            const container = document.getElementById('players');
            container.innerHTML = '';

            players.forEach(player => {
                const isWinner = player.score >= 24;
                if (isWinner && !gameEnded) {
                    gameEnded = true;
                    setTimeout(() => {
                        alert(üéâ ¬°${player.name} ha ganado con ${player.score} puntos!);
                    }, 300);
                }

                const playerCard = document.createElement('div');
                playerCard.className = player-card ${isWinner ? 'winner' : ''};
                playerCard.innerHTML = `
                    ${isWinner ? '<div class="winner-badge">üèÜ GANADOR</div>' : ''}
                    <div class="player-header">
                        <input type="text" class="player-name" value="${player.name}" 
                               onchange="updatePlayerName(${player.id}, this.value)">
                        ${players.length > 1 ? <button class="delete-btn" onclick="removePlayer(${player.id})">üóëÔ∏è</button> : ''}
                    </div>
                    
                    <div class="score-display">${player.score}</div>
                    <div class="score-limit">Meta: 24 puntos</div>

                    <div class="section-title">üéØ Ca√≠das</div>
                    <div class="caidas-grid">
                        <button class="action-btn caida-btn" onclick="addScore(${player.id}, 1)">1-7<br>(+1)</button>
                        <button class="action-btn caida-btn" onclick="addScore(${player.id}, 2)">10<br>(+2)</button>
                        <button class="action-btn caida-btn" onclick="addScore(${player.id}, 3)">11<br>(+3)</button>
                        <button class="action-btn caida-btn" onclick="addScore(${player.id}, 4)">12<br>(+4)</button>
                    </div>

                    <div class="section-title">üé¥ Rondas</div>
                    <div class="rondas-grid">
                        <button class="action-btn ronda-btn" onclick="addScore(${player.id}, 1)">1-7<br>(+1)</button>
                        <button class="action-btn ronda-btn" onclick="addScore(${player.id}, 2)">10<br>(+2)</button>
                        <button class="action-btn ronda-btn" onclick="addScore(${player.id}, 3)">11<br>(+3)</button>
                        <button class="action-btn ronda-btn" onclick="addScore(${player.id}, 4)">12<br>(+4)</button>
                    </div>

                    <div class="section-title">‚ú® Cantos Especiales</div>
                    <div class="cantos-grid">
                        <button class="action-btn patrulla-btn" onclick="addScore(${player.id}, 6)">üî∑ PATRULLA (+6 puntos)</button>
                        <button class="action-btn vigia-btn" onclick="addScore(${player.id}, 7)">üî∑ VIG√çA (+7 puntos)</button>
                        <button class="action-btn registro-btn" onclick="addScore(${player.id}, 8)">üî∑ REGISTRO (+8 puntos)</button>
                    </div>

                    <div class="control-buttons">
                        <button class="reset-btn" onclick="addScore(${player.id}, -1)">-1 Punto</button>
                        <button class="reset-btn" onclick="resetPlayer(${player.id})">Reiniciar Jugador</button>
                    </div>
                `;
                container.appendChild(playerCard);
            });
        }

        function addScore(playerId, points) {
            const player = players.find(p => p.id === playerId);
            if (player && !gameEnded) {
                player.score = Math.max(0, player.score + points);
                renderPlayers();
            }
        }

        function updatePlayerName(playerId, newName) {
            const player = players.find(p => p.id === playerId);
            if (player && newName.trim()) {
                player.name = newName.trim();
            }
        }

        function resetPlayer(playerId) {
            const player = players.find(p => p.id === playerId);
            if (player) {
                player.score = 0;
                gameEnded = false;
                renderPlayers();
            }
        }

        function removePlayer(playerId) {
            if (players.length > 1) {
                players = players.filter(p => p.id !== playerId);
                gameEnded = false;
                renderPlayers();
            }
        }

        function addPlayer() {
            const input = document.getElementById('newPlayerName');
            const name = input.value.trim();
            if (name) {
                players.push({
                    id: Date.now(),
                    name: name,
                    score: 0
                });
                input.value = '';
                gameEnded = false;
                renderPlayers();
            }
        }

        function resetAll() {
            if (confirm('¬øEst√°s seguro de que quieres reiniciar todo el juego?')) {
                players = [
                    { id: 1, name: 'Jugador 1', score: 0 },
                    { id: 2, name: 'Jugador 2', score: 0 }
                ];
                gameEnded = false;
                renderPlayers();
            }
        }

        function showRules() {
            document.getElementById('rulesModal').style.display = 'block';
        }

        function hideRules() {
            document.getElementById('rulesModal').style.display = 'none';
        }

        // Inicializar
        renderPlayers();
    </script>
</body>
</html>
